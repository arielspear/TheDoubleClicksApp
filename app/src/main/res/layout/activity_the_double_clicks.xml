<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".TheDoubleClicks"
                android:theme="@style/AppTheme">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/double_clicks"
        android:src="@drawable/doubleclicks"
        android:layout_marginBottom="195dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        style="@style/CustomButton"
        android:text="@string/about_the_band"
        android:id="@+id/showAboutTheBand"
        android:layout_above="@+id/showAlbumsButton"/>
    <Button
        style="@style/CustomButton"
        android:text="@string/show_albums"
        android:id="@+id/showAlbumsButton"
        android:layout_alignParentBottom="true"/>

    <Button
        style="@style/CustomButton"
        android:text="test button"
        android:id="@+id/button"
        android:layout_above="@+id/showAboutTheBand"/>


</RelativeLayout>
